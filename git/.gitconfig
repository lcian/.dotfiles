[diff]
    tool = difftastic
[difftool]
    prompt = false
[difftool "difftastic"]
    cmd = difft "$LOCAL" "$REMOTE"
[pager]
    difftool = true

[merge]
    tool = nvimdiff
    conflictstyle = diff3
[mergetool "vimdiff"]
    layout = LOCAL,MERGED,REMOTE
[init]
	defaultBranch = master
