set nocompatible
set encoding=utf-8

set backspace=indent,eol,start

set autoindent
set expandtab
set tabstop=4
set shiftwidth=4

set mouse=nvi
set number
set ruler
set scrolloff=9
set laststatus=2
set splitbelow
set splitright
set showmode
set showcmd
syntax on

set hlsearch
set incsearch
set ignorecase
set smartcase
set showmatch
set wildmenu
set wildmode=full

set undodir=~/.vim/undo//
set noswapfile
set nomodeline
